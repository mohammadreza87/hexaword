{
  "private": true,
  "name": "hexaword",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build",
    "build:levels": "node tools/scripts/build-words.mjs",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:levels && npm run build:client && npm run build:server",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "login": "devvit login",
    "launch": "npm run build && npm run deploy && devvit publish",
    "type-check": "tsc --build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:determinism": "vitest run src/tests/determinism.test.ts"
  },
  "dependencies": {
    "@devvit/web": "0.12.0",
    "devvit": "0.12.0",
    "express": "5.1.0",
    "gsap": "^3.13.0",
    "honeycomb-grid": "^4.1.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@esbuild/linux-x64": "^0.25.10",
    "@rollup/rollup-linux-x64-gnu": "^4.52.0",
    "@types/express": "5.0.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.6",
    "supertest": "7.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.2",
    "vite": "6.2.4",
    "vitest": "^3.2.4"
  }
}
